<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Fairlios</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<%- include("partials/header") %>
<body class="bg-light loading">
  <!-- Loader -->
<div id="loader">
  <div class="spinner-border text-primary" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>
  <!-- ---container--- -->
<div class="container py-md-4 py-3">
  <!-- -----flash Messages----- -->
  <%- include("partials/flash") %>
  
  <!-- Welcome Header -->
<div class="card shadow-sm border-0 bg-primary text-white rounded-3">
  <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-center">
    <div>
      <h2 class="fw-bold mb-1 d-flex align-items-center gap-2">
        <span><%= greeting %>, <%= user.name %></span>
        <img src="https://openweathermap.org/img/wn/<%= user.weatherIcon %>@2x.png"
            class="img-fluid"
            style="max-width: 80px; height: auto;">
      </h2>

      <p class="mb-0 text-light opacity-75">Hereâ€™s your expense summary</p>
    </div>
    <div class="mt-3 mt-md-0">
      <span class="badge bg-light text-dark fs-6 px-3 py-2">
        Overall Expenses: Rs <%= totalExpenses %>
      </span>
    </div>
  </div>
</div>

<!-- --------------Xtra Section 1 -------------- -->


  <!-- Groups Section -->
   <div class="d-flex justify-content-between align-items-center mx-2 my-3">
    <h4 class="fw-bold">Your Groups</h4>
    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newGroupModal"><i class="bi bi-file-earmark-plus me-2"></i>Add Group</button>
   </div>
  
  <div class="row g-4">
    <% if (groupedExpenses && Object.keys(groupedExpenses).length > 0) { %>
      <% Object.keys(groupedExpenses).forEach(code => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm border-0 h-100">
            
            <!-- Card Header -->
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0"><i class="bi bi-collection me-2"></i>Group Code: <%= code %></h5>
            </div>
            
            <!-- Card Body -->
            <div class="card-body d-flex flex-column">
              <p class="card-text">
                <strong>Your Share:</strong> 
                <span class="text-success">Rs <%= groupTotals[code].spentByYou %></span>
              </p>
              
              <p class="card-text">
                <strong>Group Total:</strong> 
                <span class="fw-semibold">Rs <%= groupTotals[code].total %></span>
              </p>
              
              <p class="card-text">
                <strong>Members:</strong>
                <% Object.values(groupTotals[code].perUser).forEach(u => { %> 
                  <!-- <small class="badge rounded-pill bg-light text-dark"></small> -->
                  <small class="btn btn-light btn-sm py-0 px-2 m-2 position-relative">
                    <%= u.name.split(" ")[0] %>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-info px-1 py-0 small">
                      <%= u.total %>
                      <span class="visually-hidden">0</span>
                    </span>
                  </small>
                <% }) %>
              </p>
              
              <p class="card-text">
                <strong>Created By:</strong> 
                <%= groups.find(g => g.expenseCode === code)?.createdBy?.name || "Unknown" %>
              </p>
              
              <!-- View Button -->
              <a href="/expense/group-detail/<%= code %>" class="btn btn-outline-primary mt-auto">
                View Details <i class="bi bi-box-arrow-in-up-right mx-2"></i>
              </a>
            </div>
            
            <!-- Footer -->
            <div class="card-footer text-muted small">
              ðŸ“… Created At: <%= new Date(groupTotals[code].updatedAt).toLocaleDateString() %>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info text-center shadow-sm">
          No expenses added yet. Start by adding one below!
        </div>
      </div>
    <% } %>
    <!-- pagination -->
    <% if (paginatedMeta.totalDocs > 6) { %>
    <nav aria-label="Page navigation">
      <ul class="pagination flex-wrap">
        <% if (paginatedMeta.hasPrevPage) { %>
          <li class="page-item">
            <a class="page-link" href="/?page=<%= paginatedMeta.prevPage %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
        <% }else { %>
          <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
       <% } %>
        <% for (let i = 1; i <= paginatedMeta.totalPages; i++) { %>
          <li class="page-item <%= i === paginatedMeta.page ? 'active' : '' %>">
            <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
        <% if (paginatedMeta.hasNextPage) { %>
          <li class="page-item">
            <a class="page-link" href="/?page=<%= paginatedMeta.nextPage %>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        <% } else{ %>
          <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        <% } %>
      </ul>
    </nav>
    <% } %>
    <!-- /pagination -->

  </div>
</div>

<!-- Add Expense Modal -->
<div class="modal fade" id="newGroupModal" tabindex="-1" aria-labelledby="newGroupModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content shadow-lg">
      <form action="/group/new" method="POST">
        
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title fw-bold" id="newGroupModalLabel">âž• Add New/Existing Group</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <div class="row g-3">
            <div class="col-12">
              <label class="form-label fw-semibold">Group Code (optional)</label>
              <input type="text" name="expenseCode" class="form-control" value="<%= formData.expenseCode %>" placeholder="Leave blank to create a new group or paste existing group code">
            </div>
          </div><br>
        <!-- -----flash Messages----- -->
        <%- include("partials/flash") %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Group</button>
        </div>

      </form>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/dashboard.js"></script>
</body>
<%- include("partials/footer") %>
</html>
